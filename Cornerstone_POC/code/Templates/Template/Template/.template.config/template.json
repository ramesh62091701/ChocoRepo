{
  "$schema": "http://json.schemastore.org/template",
  "author": "Sonata-Software",
  "classifications": [ "API" ],
  "identity": "CSOD_Custom_Template",
  "name": "CSOD custom template",
  "description": "Custom template for CSOD",
  "shortName": "csodcustomtemplate",
  "sourceName": "Template",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net6.0"
        },
        {
          "choice": "net8.0"
        }
      ],
      "defaultValue": "net8.0",
      "replaces": "$$TargetFramework$$"
    },
    "Service": {
      "type": "parameter",
      "description": "Custom code BFF Service",
      "datatype": "text",
      "defaultValue": "// Add your Service code here",
      "replaces": "$$Servicecode$$"
    },
    "Controller": {
      "type": "parameter",
      "description": "Custom code for Controller Service",
      "datatype": "text",
      "defaultValue": "// Add your Controller Service code here",
      "replaces": "$$Controller$$"
    },
    "DataRepo": {
      "type": "parameter",
      "description": "Custom code for Data Repository",
      "datatype": "text",
      "defaultValue": "// Add your Data Repository code here",
      "replaces": "$$DataRepo$$"
    },
    "DataService": {
      "type": "parameter",
      "description": "Custom code for Data Service",
      "datatype": "text",
      "defaultValue": "// Add your Data Service code here",
      "replaces": "$$DataService$$"
    },
    "EnbleSwaggerSupport":{
      "type": "parameter",
      "description": "Enable Swagger",
      "datatype" : "bool",
      "defaultValue": "true"
    }
  }
}
